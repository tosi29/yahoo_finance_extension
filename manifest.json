{
  "name": "YF Extended View",
  "version": "0.1.2",
  "manifest_version": 2,
  "description": "Yahoo Financeのポートフォリオテーブルに色を付けたり、カラムでソートできるようになる、非公式拡張です。",
  "author": "tosi",
  "icons": {
    "16": "icon/16.png",
    "48": "icon/48.png",
    "128": "icon/128.png"
  },
  "content_scripts": [
    {
      "matches": ["https://info.finance.yahoo.co.jp/portfolio/display/*"],
      "js": ["js/tablesort_custom.js", "js/script.js"],
	    "css": ["css/tablesort.css"],
	    "run_at": "document_idle"
    }
  ]
}